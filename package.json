{
  "name": "saucedemo-qa-automation",
  "version": "1.0.0",
  "description": "UI and API automation tests for SauceDemo and JSONPlaceholder",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:api": "npx playwright test tests/api-tests.spec.ts",
    "test:ui-only": "npx playwright test tests/user-workflow.spec.ts",
    "test:all": "npx playwright test --reporter=html",
    "report": "npx playwright show-report",
    "install:playwright": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}